---
import { Image } from "astro:assets";
import logo from "@assets/img/logo.png";

const navLinks = [
  { href: "/", label: "Inicio" },
  { href: "/calculadora", label: "Calculadora" },
];

const currentPath = Astro.url.pathname;
---
<nav
  id="mainNavbar"
  class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0 navbar-transparent"
  style="width: 100%; transition: background 0.3s;"
>
  <a href="/" class="navbar-brand p-0">
    <h1 class="text-primary">
      <Image
        src={logo}
        alt="Logo de agroreach"
        width="60"
        height="60"
        class="me-2 rounded-circle object-fit-cover"
        style="object-fit: cover"
      />
      AgroReach
    </h1>
  </a>
  <button
    class="navbar-toggler"
    type="button"
    data-bs-toggle="collapse"
    data-bs-target="#navbarCollapse"
    aria-controls="navbarCollapse"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="fa fa-bars"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <div class="navbar-nav ms-auto py-0">
      {navLinks.map(link => (
        <a
          href={link.href}
          class={`nav-item nav-link${currentPath === link.href ? " active" : ""}`}
        >{link.label}</a>
      ))}
    </div>
    <a
      href="#"
      class="btn btn-gradient-primary rounded-pill py-2 px-4 my-3 my-lg-0 flex-shrink-0 shadow-lg"
      style="
        background: linear-gradient(90deg, #00d084, #00b374);
        color: white;
        font-weight: bold;
        border: none;
      "
      >ðŸŒŸ Comenzar</a
    >
  </div>
</nav>