---
import Slide from './Slide.astro';
import carousel1 from "@assets/img/carousel-1.jpg";
import carousel2 from "@assets/img/carousel-2.jpg";

const slides = [
  {
    img: carousel1,
    title: "Simula tu Crédito Agropecuario",
    headline: "Descubre cuánto puedes financiar para tu campo",
    desc: "¿Eres productor, campesino o empresario del agro? Calcula fácilmente el crédito que puedes obtener y conoce las mejores condiciones para impulsar tu proyecto. ¡Haz crecer tu finca con el respaldo que mereces!",
    btn1: { label: "Simula tu Crédito", icon: "fas fa-calculator", href: "/calculadora" },
  },
  {
    img: carousel2,
    title: "Haz Realidad tus Sueños en el Agro",
    headline: "Créditos rápidos, transparentes y a tu medida",
    desc: "Accede a nuestra calculadora de créditos y descubre en minutos cómo financiar maquinaria, insumos o expansión de tu negocio agropecuario. ¡Sin trámites complicados!",
    btn1: { label: "Calcular Ahora", icon: "fas fa-seedling", href: "#" },
    btn2: { label: "Contactar un Experto", href: "#" },
  },
];
---
<div class="header-carousel owl-carousel mt-n12" >
  {slides.map((slide, idx) => (
    <Slide slide={slide} idx={idx} />
  ))}
</div>