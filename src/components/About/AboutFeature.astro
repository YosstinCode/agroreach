---
export interface Props {
  icon: string;
  title: string;
  text: string;
}
const { icon, title, text } = Astro.props;
---
<div class="col-md-6 col-lg-6 col-xl-6">
  <div class="d-flex">
    <div>
      <i class={`${icon} fa-3x text-primary`}></i>
    </div>
    <div class="ms-4">
      <h4>{title}</h4>
      <p>{text}</p>
    </div>
  </div>
</div>